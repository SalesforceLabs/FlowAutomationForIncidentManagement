    xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/6.50.0 https://pmd.sourceforge.io/ruleset_2_0_0.xsd">

    <description>
        rule sets for Apex
    </description>

    <rule ref="category/apex/bestpractices.xml/ApexUnitTestClassShouldHaveAsserts">
        <properties>
            <property name="additionalAssertMethodPattern"></property>
